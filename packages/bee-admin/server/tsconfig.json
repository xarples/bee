{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmit": false,
    "baseUrl": ".",
    "outDir": "../dist",
    "types": ["@types/node", "@nuxt/types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
